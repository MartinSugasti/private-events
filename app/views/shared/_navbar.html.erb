<nav class="navbar navbar-expand shadow bg-secondary">
  <%= link_to root_path, class: 'd-flex align-items-center h1 my-1 text-primary text-decoration-none' do %>
    <i class="far fa-calendar-check mr-3"></i>
    <div>Private Events</div>
  <% end %>

  <ul class="navbar-nav ml-auto mr-3">
    <% if user_signed_in? %>
      <li class="align-items-center d-flex nav-item mr-4">
        <%= link_to 'Events', root_path, class: 'h3 my-1 text-primary text-decoration-none' %>
      </li>

      <li class="nav-item dropdown h3 text-primary my-1">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= current_user.username %>
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to 'Events', root_path, class: 'text-secondary dropdown-item' %>
            <%= link_to "Events API", root_path, remote: true, class: 'text-secondary dropdown-item', data: { type: 'json', disable_with: "Saving..." } %>
            <%= link_to 'My Events', user_path(current_user), class: 'text-secondary dropdown-item' %>
            <%= link_to 'New Event', new_event_path, class: 'text-secondary dropdown-item' %>
            <div class="dropdown-divider"></div>
            <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'text-secondary dropdown-item' %>
        </div>
      </li>
    <% else %>
      <%= link_to 'Log in', new_user_session_path, class: 'h3 my-1 text-primary text-decoration-none' %>
    <% end %>
  </ul>
</nav>
