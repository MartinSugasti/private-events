<div class="login-background d-flex justify-content-center align-items-center">
  <div class="p-5 bg-primary rounded login-square">
    <div class="text-center m-auto w-90">
      <h1 class="px-3 mb-3 text-secondary">Private Events</h1>
      <p class="text-secondary">Sign up</p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mt-3 form-group form-icons">
        <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: 'Username', class: 'pl-2 py-3 bg-primary rounded w-100 border username-field pr-5' %>
      </div>

      <div class="field mt-3 form-group form-icons">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'pl-2 py-3 bg-primary rounded w-100 border email-field pr-5' %>
      </div>

      <div class="field mt-3">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "New password (#{@minimum_password_length} characters minimum)", class: 'pl-2 py-3 bg-primary rounded w-100 border password-field pr-5' %>
      </div>

      <div class="field mt-3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm password', class: 'pl-2 py-3 bg-primary rounded w-100 border password-field pr-5' %>
      </div>

      <div class="actions mt-4 mb-2 text-center">
        <%= f.submit 'Sign up', class: 'login-button bg-tertiary py-3 px-4 mt-2 border-0 rounded-pill text-uppercase text-primary' %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
